# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                       controllers.Application.index

# User Admin
GET           /admin/users            controllers.admin.UserAdminController.list
GET           /admin/users/:id        controllers.admin.UserAdminController.get(id: String)
DELETE        /admin/users/:id        controllers.admin.UserAdminController.delete(id: String)
POST          /admin/users            controllers.admin.UserAdminController.update

# Farm Admin
GET           /admin/farm             controllers.admin.FarmAdminController.list
GET           /admin/farm/:id         controllers.admin.FarmAdminController.get(id: String)
DELETE        /admin/farm/:id         controllers.admin.FarmAdminController.delete(id: String)
POST          /admin/farm             controllers.admin.FarmAdminController.update

# User
GET           /user                   controllers.UserController.get

# Farms
GET           /farms                  controllers.FarmController.list
POST          /farms                  controllers.FarmController.create
GET           /farms/:id              controllers.FarmController.get(id: String)
DELETE        /farms/:id              controllers.FarmController.delete(id: String)
POST          /farms/:id              controllers.FarmController.update(id: String)

# Offer
GET           /offers                 controllers.OfferController.list
GET           /offers/:id             controllers.OfferController.get(id : String)
POST          /offers/:id             controllers.OfferController.create(id: String)
DELETE        /offers/:id             controllers.OfferController.delete(id: String)

# Authentification
GET           /signOut                controllers.authentification.SignOut.signOut
POST          /signIn                 controllers.authentification.SignInController.authenticate
POST          /signUp                 controllers.authentification.SignUpController.signUp

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file           controllers.Assets.versioned(path="/public", file: Asset)

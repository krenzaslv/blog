# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
# Yeoman stuff
GET           /ui                     com.tuplejump.playYeoman.Yeoman.index

->            /ui/                    yeoman.Routes

# Home page
GET           /                       controllers.Application.index

# User Admin
GET           /admin/users            controllers.admin.UserAdminController.list
GET           /admin/users/:id        controllers.admin.UserAdminController.get(id: String)
DELETE        /admin/users/:id        controllers.admin.UserAdminController.delete(id: String)
POST          /admin/users            controllers.admin.UserAdminController.update

# Post
GET           /post                   controllers.web.PostController.list
POST          /post                   controllers.web.PostController.create
GET           /post/:id               controllers.web.PostController.get(id: String)
DELETE        /post/:id               controllers.web.PostController.delete(id: String)

# User
GET           /user                   controllers.web.UserController.get

# Picture
POST          /picture                controllers.admin.PictureController.upload
GET           /picture/:id             controllers.admin.PictureController.get(id: String)
GET           /picture/get/:id             controllers.admin.PictureController.get(id: String)

# Authentification
GET           /signOut                controllers.authentification.SignOut.signOut
POST          /signIn                 controllers.authentification.SignInController.authenticate
POST          /signUp                 controllers.authentification.SignUpController.signUp

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file           controllers.Assets.versioned(path="/public", file: Asset)
